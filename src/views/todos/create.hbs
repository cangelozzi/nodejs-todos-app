<div class="row">
    <div class="col-md-4 offset-md-4">
        <h1>Create Todo</h1>
        <div class="card">
            <div class="card-body">
                <form action="/todos/create" method="POST">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" name="title" maxlength="100" placeholder="Todo title" id="title"
                            class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <label for="desc">Description</label>
                        <textarea type="text" name="desc" maxlength="500" placeholder="Todo description"
                            class="form-control" id="desc" rows="4"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="todostate">State</label>
                        <select class="form-control" id="todostate" name="todostate">
                            <option value="" disabled selected>Todo State:</option>
                            {{#each stateTodos}}
                            <option value="{{this}}">{{this}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="duedate">Due Date</label>
                        <input class="form-control" id="duedate" name="duedate" placeholder="DD/MM/YYYY" type="date" />
                    </div>
                    <button type="submit" class="btn btn-success btn-block">Save your todo</button>
                </form>
            </div>
        </div>
    </div>
</div>