<div class="row">
    {{#each data}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h3>{{title}}</h3>
                <p>{{desc}}</p>
                <p><span>State:</span> {{todostate}}</p>
                <p><span>Due Date:</span> {{duedate}}</p>
            </div>
            <div class="card-footer d-flex justify-content-between aligh-items-center">
                <a href="/todos/delete/{{id}}" class="btn btn-danger">Delete</a>
                <a href="/todos/edit/{{id}}" class="btn btn-primary">Edit</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>